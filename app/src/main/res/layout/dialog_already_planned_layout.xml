<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivLog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/alert" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Mar Rueda"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="marrueda49@gmail.com"
                android:textColor="@color/grey_text"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/already_have_some_n_other_tasks_planned_for_the_n_selected_time"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Mar Rueda is available eariler 2-3 PM \n and later 5-6 PM on the day you selected"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="normal" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="@string/would_you_like_to_edit_the_time_you_are_assinging"
                android:textColor="@color/grey_text"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:strokeColor="@color/grey_text"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <View
                            android:layout_width="5dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:background="@color/red" />

                        <View
                            android:layout_width="5dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:background="@color/yellow"
                            android:visibility="gone" />

                        <View
                            android:layout_width="5dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:background="@color/green"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/rlView"
                        android:gravity="center_vertical">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txTittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pay the Electricity Bill"
                            android:textColor="@color/grey_text"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivPending"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@+id/txTittle"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/pending"
                            app:tint="@color/grey_text" />


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txTittle"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/ivPending"
                            android:text="3.00 pm"
                            android:textColor="@color/grey_text"
                            android:textSize="12sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txWeek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txTittle"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@+id/txDate"
                            android:text=". Monthly"
                            android:textColor="@color/grey_text"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btEdit"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"

                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="@string/edit_time"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    app:cornerRadius="22dp"
                    app:strokeColor="@color/purple_700"
                    app:strokeWidth="2dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btAlways"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/purple_200"
                    android:text="@string/assign_anyways"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="50dp"
                    app:iconGravity="textStart"
                    app:iconSize="25dp" />


            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>